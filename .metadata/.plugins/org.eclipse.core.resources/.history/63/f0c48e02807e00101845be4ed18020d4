	<h1>Display first 20 even numbers</h1>
	<%
		out.print("<h3>"+displayEvenOrOdd(20, "EVEN")+"</h3>");
	%>
	<h1>Display first 15 odd numbers</h1>
	<%
		out.print("<h3>"+displayEvenOrOdd(15, "ODD")+"</h3>");

	%>

	<%!StringBuilder displayEvenOrOdd(int number, String choice) {
		choice = choice.trim().toLowerCase();
		StringBuilder sb = new StringBuilder();
		if (choice.equalsIgnoreCase("even") || choice.contains("even")) {
			for (int i = 2; i <= number * 2; i += 2) {
				String msg;
				if (i == number * 2) {
					msg = i +"";
				} else {
					msg = i + ", ";
				}
				sb.append(msg);
			}
		}else{
			for (int i = 1; i <= number * 2; i += 2) {
				String msg;
				if (i == number * 2-1) {
					msg = i +"";
				} else {
					msg = i + ", ";
				}
				sb.append(msg);
			}
		}

		return sb;
	}%>
