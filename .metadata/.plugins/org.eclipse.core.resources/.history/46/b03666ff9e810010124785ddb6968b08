	<%
	String numStr = request.getParameter("number");
	if (numStr != null && !numStr.isBlank()) {
		out.print("<hr>");
		int num;
		if (Pattern.matches("^\\d+$", numStr)) {
			num = Integer.parseInt(numStr);
			if (num <= 0) {
		out.print("<p style='color:red;'>Enter Positive Number Greater Than 0 To Check Prime Or Not</p>");
			} else {
		if (FunctionUtils.isPrime(num)) {
			out.print("<p style='color:green;'>Number = " + num
					+ " is a <span style='font-weight:bold'>prime number</span></p>");

		} else {
			out.print("<p>Number = " + num
					+ " is <span style='font-weight:bold; color:red'>not a prime number</span></p>");

		}
			}
		} else {
			out.print("<p style='color:red;'>Enter Positive Number Only</p>");
		}

	}else{
		if(numStr != null && numStr.isBlank()){
			out.print("<p style='color:red;'>Enter Number First</p>");
			
		}
	}
	%>
